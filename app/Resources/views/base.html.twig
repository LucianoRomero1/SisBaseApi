<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.png') }}" />
    <title>{% block title %} Proyecto Base {% endblock %}</title>

    {% block stylesheets %}

    <link href="{{ asset('css/bootstrap.css') }}" rel="stylesheet">
    <link href="{{ asset('css/site.css') }}" rel="stylesheet">
    <link href="{{ asset('css/fontawesome-all.css') }}" rel="stylesheet">
    <link href="{{ asset('css/dataTable.css') }}" rel="stylesheet">
    {% endblock %}
    
</head>
<body id="app-layout">

    {% block javascript %}
        <script src="{{ asset('js/jquery-3.5.1.min.js') }}"></script>
        <script src="{{ asset('js/popper.min.js') }}"></script>
        <script src="{{ asset('js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('js/util_js.js') }}"></script>
        <script src="{{ asset('js/fontawesome.js') }}"></script>
        <script src="{{ asset('js/sweetAlert.js') }}"></script>
        <script src="{{ asset('js/tooltip.js') }}"></script>
        <script src="{{ asset('js/addFlash.js') }}"></script>
        <script src="{{ asset('js/dataTablejQuery.js') }}"></script>
        <script src="{{ asset('js/dataTableBs.js') }}"></script>
        <script src=" {{ asset('js/jquery.table2excel.js') }}"></script>
        {# Estos dos scripts siguientes son para ordenar bien las datatable por fecha #}
        <script src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.11.2/moment.min.js"></script>
        <script src="//cdn.datatables.net/plug-ins/1.10.12/sorting/datetime-moment.js"></script>
        {# Scripts propios #}
        <script src=" {{ asset('js/customJs/ajaxDelete.js') }}"></script>
    {% endblock %}
</body>
</html>
